					<div class="projects">

						{% paginate craft.entries.section('projects').limit(4) as pageEntries %}

						{% for entry in pageEntries %}
						<div class="project">
							<a href="{{ entry.url }}"></a>
							<div class="projectL">
								<div class="projectImgContainer" style="background: url(
